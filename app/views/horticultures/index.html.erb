<p id="notice"><%= notice %></p>

<h1>Listing Horticultures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Varieties</th>
      <th>Climate</th>
      <th>Soil</th>
      <th>Seedrate</th>
      <th>Season</th>
      <th>Fertilizer</th>
      <th>Diseases</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horticultures.each do |horticulture| %>
      <tr>
        <td><%= horticulture.name %></td>
        <td><%= horticulture.description %></td>
        <td><%= horticulture.varieties %></td>
        <td><%= horticulture.climate %></td>
        <td><%= horticulture.soil %></td>
        <td><%= horticulture.seedrate %></td>
        <td><%= horticulture.season %></td>
        <td><%= horticulture.fertilizer %></td>
        <td><%= horticulture.diseases %></td>
        <td><%= link_to 'Show', horticulture %></td>
        <td><%= link_to 'Edit', edit_horticulture_path(horticulture) %></td>
        <td><%= link_to 'Destroy', horticulture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

