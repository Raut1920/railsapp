<p id="notice"><%= notice %></p>

<h1>Listing Agricultures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Varieties</th>
      <th>Climate</th>
      <th>Soil</th>
      <th>Seedrate</th>
      <th>Season</th>
      <th>Fertilizer</th>
      <th>Diseases</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agricultures.each do |agriculture| %>
      <tr>
        <td><%= agriculture.name %></td>
        <td><%= agriculture.description %></td>
        <td><%= agriculture.varieties %></td>
        <td><%= agriculture.climate %></td>
        <td><%= agriculture.soil %></td>
        <td><%= agriculture.seedrate %></td>
        <td><%= agriculture.season %></td>
        <td><%= agriculture.fertilizer %></td>
        <td><%= agriculture.diseases %></td>
        <td><%= link_to 'Show', agriculture %></td>
        <td><%= link_to 'Edit', edit_agriculture_path(agriculture) %></td>
        <td><%= link_to 'Destroy', agriculture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

